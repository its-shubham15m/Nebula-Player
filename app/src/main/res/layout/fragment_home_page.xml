<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:paddingBottom="2dp">

        <ImageButton
            android:id="@+id/settings_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_settings"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Settings"
            android:padding="12dp"
            android:layout_marginStart="8dp" app:tint="?attr/colorOnSurface"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_search_background"
            android:gravity="center_vertical"
            android:padding="7dp"
            android:layout_marginEnd="12dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_search"
                android:layout_marginEnd="8dp"
                android:contentDescription="Search"
                app:tint="?attr/colorOnSurfaceVariant"/>

            <EditText
                android:id="@+id/search_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Search songs, artists, albums..."
                android:textSize="14sp"
                android:background="@android:color/transparent"
                android:singleLine="true"
                android:imeOptions="actionSearch"
                android:inputType="none"
                android:paddingVertical="4dp"
                android:focusable="false"
                android:clickable="true" />

            <View
                android:layout_width="2dp"
                android:layout_height="20dp"
                android:background="?attr/colorOutline"
                android:layout_marginHorizontal="8dp" />

            <ImageButton
                android:id="@+id/voice_search_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_mic"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Voice Search"
                app:tint="?attr/colorOnSurfaceVariant"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="4dp"
        android:baselineAligned="false">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_favorites"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#673AB7">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/img_favorites_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="Favorite Album Art"
                    android:src="@drawable/default_album_art"
                    android:background="@android:color/transparent"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#4D000000" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_favorite_filled"
                        app:tint="@android:color/white"
                        android:contentDescription="Favorites Icon" />
                    <TextView
                        android:id="@+id/card_fav_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Favorites"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginTop="2dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        tools:text="Favorite Songs"/>
                    <TextView
                        android:id="@+id/card_fav_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="15 songs"
                        android:textColor="#B3FFFFFF"
                        android:textSize="10sp"/>
                </LinearLayout>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_playlists"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#4CAF50">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/img_playlists_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/default_album_art"
                    android:scaleType="centerCrop"
                    android:contentDescription="Playlists Album Art Background" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#4D000000" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_playlist"
                        app:tint="@android:color/white"
                        android:contentDescription="Playlists Icon" />
                    <TextView
                        android:id="@+id/card_playlist_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Playlists"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginTop="2dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        tools:text="Playlist Name"/>
                    <TextView
                        android:id="@+id/card_playlist_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="3 playlists"
                        android:textColor="#B3FFFFFF"
                        android:textSize="10sp"/>
                </LinearLayout>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_recent"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#FF9800">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/img_recent_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/default_album_art"
                    android:scaleType="centerCrop"
                    android:contentDescription="Recent Album Art Background" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#4D000000" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_recent"
                        app:tint="@android:color/white"
                        android:contentDescription="Recent Icon" />
                    <TextView
                        android:id="@+id/card_recent_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recent"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginTop="2dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        tools:text="Last Played Song"/>
                    <TextView
                        android:id="@+id/card_recent_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="3 songs"
                        android:textColor="#B3FFFFFF"
                        android:textSize="10sp"/>
                </LinearLayout>
            </FrameLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/categories_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp">

            <TextView
                android:id="@+id/tab_songs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Songs"
                android:textSize="16sp"
                android:textStyle="normal"
                android:padding="8dp"
                android:background="?attr/selectableItemBackground"
                android:textColor="?attr/colorOnSurface" />
            <TextView
                android:id="@+id/tab_artists"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artists"
                android:textSize="16sp"
                android:padding="8dp"
                android:background="?attr/selectableItemBackground"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <TextView
                android:id="@+id/tab_albums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Albums"
                android:textSize="16sp"
                android:padding="8dp"
                android:background="?attr/selectableItemBackground"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <TextView
                android:id="@+id/tab_genres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Genres"
                android:textSize="16sp"
                android:padding="8dp"
                android:background="?attr/selectableItemBackground"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <TextView
                android:id="@+id/tab_videos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Videos"
                android:textSize="16sp"
                android:padding="8dp"
                android:background="?attr/selectableItemBackground"
                android:textColor="?attr/colorOnSurfaceVariant" />
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingEnd="8dp"
        android:gravity="center_vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/shuffle_all_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:strokeColor="?attr/colorOutline"
            app:strokeWidth="1dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/shuffle_card_background"
            android:layout_marginEnd="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingVertical="10dp"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/btn_shuffle"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/shuffle"
                    app:tint="?attr/colorOnSurface"
                    android:contentDescription="Shuffle All" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shuffle All"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageButton
                android:id="@+id/btn_sort"
                android:layout_width="48dp" android:layout_height="48dp"
                android:src="@drawable/ic_sort"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="?attr/colorOnSurface"
                android:contentDescription="Sort"
                android:padding="10dp"/>

            <ImageButton
                android:id="@+id/btn_select"
                android:layout_width="48dp" android:layout_height="48dp"
                android:src="@drawable/ic_select_off"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="?attr/colorOnSurface"
                android:contentDescription="Select"
                android:padding="10dp"/>
        </LinearLayout>
    </LinearLayout>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/home_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/> </LinearLayout>