<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="80dp">

        <!-- Top Bar: Greeting & Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Good Afternoon"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_search"
                app:tint="?attr/colorOnSurface"
                android:layout_marginEnd="16dp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_preferences"
                app:tint="?attr/colorOnSurface" />

        </LinearLayout>

        <!-- Filter Chips (YouTube Style) -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingStart="16dp"
            android:clipToPadding="false"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Chip 1: All (Selected) -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="?attr/colorOnSurface"
                    android:layout_marginEnd="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="All"
                        android:textColor="?attr/colorSurface"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:textStyle="bold"/>
                </com.google.android.material.card.MaterialCardView>

                <!-- Chip 2: Music -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="?attr/colorSurfaceVariant"
                    app:strokeColor="?attr/colorOutline"
                    app:strokeWidth="1dp"
                    android:layout_marginEnd="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Music"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"/>
                </com.google.android.material.card.MaterialCardView>

                <!-- Chip 3: Videos -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="?attr/colorSurfaceVariant"
                    app:strokeColor="?attr/colorOutline"
                    app:strokeWidth="1dp"
                    android:layout_marginEnd="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Videos"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"/>
                </com.google.android.material.card.MaterialCardView>

                <!-- Chip 4: Downloads -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="?attr/colorSurfaceVariant"
                    app:strokeColor="?attr/colorOutline"
                    app:strokeWidth="1dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Downloads"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"/>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Section: Recently Played (Spotify Style) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recently Played"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="12dp"
            android:paddingHorizontal="16dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingStart="16dp"
            android:clipToPadding="false"
            android:layout_marginBottom="32dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Recent Item 1 -->
                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="2dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@android:drawable/ic_media_play"
                            android:scaleType="centerInside"
                            android:background="#FF5722"
                            app:tint="@android:color/white"/>
                    </com.google.android.material.card.MaterialCardView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Downloads"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:layout_marginTop="8dp"
                        android:textColor="?attr/colorOnSurface"/>
                </LinearLayout>

                <!-- Recent Item 2 -->
                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="2dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@android:drawable/ic_menu_gallery"
                            android:scaleType="centerInside"
                            android:background="#009688"
                            app:tint="@android:color/white"/>
                    </com.google.android.material.card.MaterialCardView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Camera Roll"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:layout_marginTop="8dp"
                        android:textColor="?attr/colorOnSurface"/>
                </LinearLayout>

                <!-- Recent Item 3 -->
                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="2dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@android:drawable/ic_lock_idle_low_battery"
                            android:scaleType="centerInside"
                            android:background="#673AB7"
                            app:tint="@android:color/white"/>
                    </com.google.android.material.card.MaterialCardView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Unknown Album"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:layout_marginTop="8dp"
                        android:textColor="?attr/colorOnSurface"/>
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Section: Videos on Device (YouTube Style) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Videos on Device"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="12dp"
            android:paddingHorizontal="16dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingStart="16dp"
            android:clipToPadding="false"
            android:layout_marginBottom="32dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Video Item 1 -->
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="16dp">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="?attr/colorSurfaceVariant">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@android:drawable/ic_menu_slideshow"
                                android:scaleType="center"
                                app:tint="?attr/colorOnSurfaceVariant"/>

                            <!-- Duration Label Wrapped in CardView for rounded corners -->
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|end"
                                android:layout_margin="8dp"
                                app:cardBackgroundColor="#99000000"
                                app:cardCornerRadius="4dp"
                                app:strokeWidth="0dp"
                                app:cardElevation="0dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="12:04"
                                    android:textSize="10sp"
                                    android:textColor="@android:color/white"
                                    android:paddingHorizontal="4dp"
                                    android:paddingVertical="2dp"/>
                            </com.google.android.material.card.MaterialCardView>
                        </FrameLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Trip_to_Mountains.mp4"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginTop="8dp"
                        android:textColor="?attr/colorOnSurface"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1.2 GB • WhatsApp Video"
                        android:textSize="12sp"
                        android:alpha="0.6"
                        android:maxLines="1"
                        android:textColor="?attr/colorOnSurface"/>
                </LinearLayout>

                <!-- Video Item 2 -->
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="16dp">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="?attr/colorSurfaceVariant">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@android:drawable/ic_menu_camera"
                                android:scaleType="center"
                                app:tint="?attr/colorOnSurfaceVariant"/>

                            <!-- Duration Label Wrapped in CardView for rounded corners -->
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|end"
                                android:layout_margin="8dp"
                                app:cardBackgroundColor="#99000000"
                                app:cardCornerRadius="4dp"
                                app:strokeWidth="0dp"
                                app:cardElevation="0dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="00:45"
                                    android:textSize="10sp"
                                    android:textColor="@android:color/white"
                                    android:paddingHorizontal="4dp"
                                    android:paddingVertical="2dp"/>
                            </com.google.android.material.card.MaterialCardView>
                        </FrameLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Screen_Recording_2024.mp4"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginTop="8dp"
                        android:textColor="?attr/colorOnSurface"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="15 MB • Screen Recorder"
                        android:textSize="12sp"
                        android:alpha="0.6"
                        android:maxLines="1"
                        android:textColor="?attr/colorOnSurface"/>
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Section: Quick Picks (List Style) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quick Picks"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="12dp"
            android:paddingHorizontal="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- List Item 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="?attr/colorSurfaceVariant">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@android:drawable/ic_media_play"
                        android:padding="12dp"
                        app:tint="?attr/colorOnSurfaceVariant"/>
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Voice_Memo_001"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface"
                        android:maxLines="1"
                        android:ellipsize="end"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recordings • 3:45"
                        android:textSize="12sp"
                        android:alpha="0.6"
                        android:textColor="?attr/colorOnSurface"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_more"
                    app:tint="?attr/colorOnSurface"
                    android:alpha="0.6"/>
            </LinearLayout>

            <!-- List Item 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="?attr/colorSurfaceVariant">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@android:drawable/ic_media_play"
                        android:padding="12dp"
                        app:tint="?attr/colorOnSurfaceVariant"/>
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Podcast_Episode_4"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface"
                        android:maxLines="1"
                        android:ellipsize="end"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Downloads • 45:20"
                        android:textSize="12sp"
                        android:alpha="0.6"
                        android:textColor="?attr/colorOnSurface"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_more"
                    app:tint="?attr/colorOnSurface"
                    android:alpha="0.6"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>