<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lyrics_overlay_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="#E6000000"
    app:cardElevation="10dp"
    android:visibility="gone"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/lyrics_loading_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:indeterminateTint="@color/white"/>

        <!-- Fallback for Plain Lyrics -->
        <ScrollView
            android:id="@+id/lyrics_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:scrollbars="none"
            android:fillViewport="true"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_lyrics_plain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:lineSpacingExtra="6dp"
                android:paddingBottom="32dp"
                tools:text="Plain lyrics text..."/>
        </ScrollView>

        <!-- RecyclerView for Synced Lyrics -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lyrics_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="50dp"
            android:clipToPadding="false"
            android:scrollbars="none"
            android:visibility="gone"
            tools:listitem="@layout/item_lyric"/>

    </FrameLayout>

</androidx.cardview.widget.CardView>