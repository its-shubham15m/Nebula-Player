<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:keepScreenOn="true">

    <androidx.media3.ui.PlayerView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        app:use_controller="false"
        app:surface_type="surface_view"
        app:resize_mode="fit"
        app:shutter_background_color="#000000" />

    <!-- Subtitle View -->
    <TextView
        android:id="@+id/subtitle_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:visibility="gone"
        tools:text="Subtitles appear here"/>

    <!-- Touch Overlay for Gestures -->
    <View
        android:id="@+id/touch_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true" />

    <!-- Center Info (Volume/Brightness) -->
    <LinearLayout
        android:id="@+id/center_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/rounded_background_black_transparent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"
        android:elevation="20dp">

        <ImageView
            android:id="@+id/center_info_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_volume"
            app:tint="#FFFFFF" />

        <TextView
            android:id="@+id/center_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="50%"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Rewind Overlay -->
    <FrameLayout
        android:id="@+id/rewind_overlay"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:background="#40000000"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView android:layout_width="48dp" android:layout_height="48dp"
                android:src="@drawable/ic_replay_10" app:tint="#FFFFFF" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginTop="4dp" android:text="-10s" android:textColor="#FFFFFF"
                android:textSize="16sp" android:textStyle="bold" />
        </LinearLayout>
    </FrameLayout>

    <!-- Forward Overlay -->
    <FrameLayout
        android:id="@+id/forward_overlay"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="#40000000"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView android:layout_width="48dp" android:layout_height="48dp"
                android:src="@drawable/ic_forward_10" app:tint="#FFFFFF" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginTop="4dp" android:text="+10s" android:textColor="#FFFFFF"
                android:textSize="16sp" android:textStyle="bold" />
        </LinearLayout>
    </FrameLayout>

    <!-- Lock Overlay -->
    <FrameLayout
        android:id="@+id/lock_overlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="32dp"
        android:visibility="gone"
        android:elevation="50dp">

        <ImageButton
            android:id="@+id/unlock_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_background_black_transparent"
            android:src="@drawable/ic_lock_open"
            app:tint="#FFFFFF"
            android:padding="12dp"/>
    </FrameLayout>

    <!-- SEEK PEEK PREVIEW -->
    <androidx.cardview.widget.CardView
        android:id="@+id/seek_peek_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_controls"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="#CC000000"
        android:visibility="gone">
        <TextView
            android:id="@+id/seek_peek_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01:20"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="8dp"/>
    </androidx.cardview.widget.CardView>

    <!-- Top Controls with Gradient -->
    <LinearLayout
        android:id="@+id/top_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_player_overlay_top"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        android:paddingTop="32dp"
        android:visibility="visible"
        android:elevation="20dp">

        <ImageButton
            android:id="@+id/player_back_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"
            app:tint="#FFFFFF" />

        <TextView
            android:id="@+id/player_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:layout_marginHorizontal="16dp"
            android:singleLine="true"
            android:text="Video Title"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Bottom Controls with Gradient -->
    <LinearLayout
        android:id="@+id/bottom_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient_player_overlay_bottom"
        android:orientation="vertical"
        android:padding="8dp"
        android:paddingTop="48dp"
        android:visibility="visible"
        android:elevation="20dp">

        <!-- Row 1: SeekBar Only -->
        <SeekBar
            android:id="@+id/player_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:progressTint="#FFFFFF"
            android:thumbTint="#FFFFFF"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"/>

        <!-- Row 2: Timestamps below SeekBar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="18dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="00:00"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="00:00"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"/>
        </RelativeLayout>

        <!-- Row 3: Control Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:paddingBottom="16dp">

            <ImageButton
                android:id="@+id/player_lock_btn"
                android:layout_width="40dp" android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_lock"
                app:tint="#FFFFFF"
                android:padding="8dp"/>

            <ImageButton
                android:id="@+id/player_tracks_btn"
                android:layout_width="40dp" android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_subtitles"
                app:tint="#FFFFFF"
                android:padding="8dp"/>

            <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/player_prev_btn"
                android:layout_width="48dp" android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_previous"
                app:tint="#FFFFFF" />

            <ImageButton
                android:id="@+id/player_play_pause_btn"
                android:layout_width="56dp" android:layout_height="48dp"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/rounded_background_black_transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_pausen"
                app:tint="#FFFFFF" />

            <ImageButton
                android:id="@+id/player_next_btn"
                android:layout_width="48dp" android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_next"
                app:tint="#FFFFFF" />

            <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/player_aspect_ratio_btn"
                android:layout_width="40dp" android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_aspect_ratio"
                app:tint="#FFFFFF"
                android:padding="8dp"/>

            <ImageButton
                android:id="@+id/player_orientation_btn"
                android:layout_width="40dp" android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_screen_rotation"
                app:tint="#FFFFFF"
                android:padding="8dp"/>

            <ImageButton
                android:id="@+id/player_options_btn"
                android:layout_width="40dp" android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_options"
                app:tint="#FFFFFF"
                android:padding="8dp"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>