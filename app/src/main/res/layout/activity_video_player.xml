<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:keepScreenOn="true">

    <androidx.media3.ui.PlayerView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        app:use_controller="false"
        app:surface_type="surface_view"
        app:resize_mode="fit"
        app:shutter_background_color="#000000" />

    <TextView
        android:id="@+id/subtitle_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:visibility="gone"
        tools:text="Subtitles appear here"/>

    <View
        android:id="@+id/touch_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true" />

    <LinearLayout
        android:id="@+id/center_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/rounded_background_black_transparent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"
        android:elevation="20dp">

        <ImageView
            android:id="@+id/center_info_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_volume"
            android:tint="#FFFFFF" />

        <TextView
            android:id="@+id/center_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="50%"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/ratio_info_chip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/rounded_background_black_transparent"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:text="Fill Screen"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:elevation="25dp"/>

    <FrameLayout
        android:id="@+id/rewind_overlay"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:background="#40000000"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView android:layout_width="48dp" android:layout_height="48dp"
                android:src="@drawable/ic_replay_10" android:tint="#FFFFFF" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginTop="4dp" android:text="-10s" android:textColor="#FFFFFF"
                android:textSize="16sp" android:textStyle="bold" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/forward_overlay"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="#40000000"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView android:layout_width="48dp" android:layout_height="48dp"
                android:src="@drawable/ic_forward_10" android:tint="#FFFFFF" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginTop="4dp" android:text="+10s" android:textColor="#FFFFFF"
                android:textSize="16sp" android:textStyle="bold" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/lock_overlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="32dp"
        android:visibility="gone"
        android:elevation="50dp">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/unlock_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_background_black_transparent"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_lock_open"
            android:tint="#FFFFFF" />
    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/seek_peek_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_controls"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="#CC000000"
        android:visibility="gone">
        <TextView
            android:id="@+id/seek_peek_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01:20"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="8dp"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/top_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/gradient_player_overlay_top"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp"
        android:paddingTop="12dp"
        android:visibility="visible"
        android:elevation="20dp">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/player_back_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/ic_back"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:tint="#FFFFFF" />

        <TextView
            android:id="@+id/player_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:layout_marginHorizontal="12dp"
            android:singleLine="true"
            android:text="Video Title"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/player_pip_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/ic_picture_in_picture"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:tint="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient_player_overlay_bottom"
        android:orientation="vertical"
        android:padding="8dp"
        android:paddingTop="10dp"
        android:paddingBottom="24dp"
        android:clipToPadding="false"
        android:visibility="visible"
        android:elevation="20dp">

        <SeekBar
            android:id="@+id/player_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:progressTint="#FFFFFF"
            android:thumbTint="#FFFFFF"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="00:00"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginHorizontal="8dp"
            android:paddingBottom="10dp">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/player_lock_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/ic_lock"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:tint="#FFFFFF"
                android:padding="8dp"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/player_tracks_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/ic_subtitles"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:tint="#FFFFFF"
                android:padding="8dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/player_prev_btn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/ic_previous"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:tint="#FFFFFF" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/player_play_pause_btn"
                android:layout_width="56dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="12dp"
                android:background="@drawable/rounded_background_black_transparent"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/ic_pausen"
                android:tint="#FFFFFF" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/player_next_btn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/ic_next"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:tint="#FFFFFF" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/player_aspect_ratio_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/ic_aspect_ratio"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:tint="#FFFFFF"
                android:padding="8dp"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/player_orientation_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/ic_screen_rotation"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:tint="#FFFFFF"
                android:padding="8dp"/>

            <!-- FINAL: give end margin so icon won't be cut by system nav/gesture insets -->
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/player_options_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/ic_options"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:tint="#FFFFFF"
                android:padding="8dp"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>