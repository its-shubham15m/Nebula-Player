<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    android:fitsSystemWindows="true">

    <!-- Custom Toolbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="12dp"
        android:paddingHorizontal="8dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:padding="12dp"
            app:tint="?attr/colorOnSurface"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Nebula"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginStart="4dp"/>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="ifContentScrolls"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingBottom="32dp"
            android:clipToPadding="false">

            <!-- HEADER ISLAND -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="24dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_app_icon"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/app_icon"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.App.CornerRound"
                        android:elevation="4dp"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurfaceVariant"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="v1.0.0 Beta"
                        android:textColor="?attr/colorOnSecondaryContainer"
                        app:chipBackgroundColor="?attr/colorSecondaryContainer"
                        app:chipStrokeWidth="0dp"
                        android:enabled="false"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tv_app_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The ultimate local media experience. Redefining how you listen and watch."
                        android:textSize="14sp"
                        android:gravity="center"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:alpha="0.8"
                        android:lineSpacingMultiplier="1.2"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ACHIEVEMENTS TITLE -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What We've Achieved"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginBottom="12dp"/>

            <!-- FEATURES GRID (2 Columns) -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="3"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false">

                <!-- Feature 1: Hybrid Player -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="?attr/colorSurface"
                    app:strokeColor="?attr/colorOutline"
                    app:strokeWidth="1dp"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_music_note"
                            app:tint="?attr/colorPrimary"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hybrid Core"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"
                            android:textColor="?attr/colorOnSurface"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Seamless Audio &amp; Video playback"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"
                            android:textColor="?attr/colorOnSurfaceVariant"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Feature 2: Equalizer -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="?attr/colorSurface"
                    app:strokeColor="?attr/colorOutline"
                    app:strokeWidth="1dp"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_equalizer"
                            app:tint="?attr/colorPrimary"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sound Engine"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"
                            android:textColor="?attr/colorOnSurface"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5-Band EQ with Bass Boost"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"
                            android:textColor="?attr/colorOnSurfaceVariant"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Feature 3: Themes -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="?attr/colorSurface"
                    app:strokeColor="?attr/colorOutline"
                    app:strokeWidth="1dp"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_theme"
                            app:tint="?attr/colorPrimary"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Adaptive UI"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"
                            android:textColor="?attr/colorOnSurface"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Light, Dark &amp; System Themes"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"
                            android:textColor="?attr/colorOnSurfaceVariant"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Feature 4: Library -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="?attr/colorSurface"
                    app:strokeColor="?attr/colorOutline"
                    app:strokeWidth="1dp"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_playlist"
                            app:tint="?attr/colorPrimary"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Smart Lib"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"
                            android:textColor="?attr/colorOnSurface"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Favorites, Recents &amp; Scanning"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"
                            android:textColor="?attr/colorOnSurfaceVariant"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </GridLayout>


            <!-- TECH STACK CHIPS -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Built With"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kotlin"
                    style="@style/Widget.Material3.Chip.Suggestion"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Media3 Exoplayer"
                    style="@style/Widget.Material3.Chip.Suggestion"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Material Design 3"
                    style="@style/Widget.Material3.Chip.Suggestion"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coroutines"
                    style="@style/Widget.Material3.Chip.Suggestion"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Android 11+"
                    style="@style/Widget.Material3.Chip.Suggestion"/>
            </com.google.android.material.chip.ChipGroup>

            <!-- DEVELOPER ISLAND -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutline"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:background="?attr/colorSurfaceVariant">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_person"
                            app:tint="?attr/colorOnSurfaceVariant"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:id="@+id/tv_developer_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Shubham Gupta"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:textColor="?attr/colorOnSurfaceVariant"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lead Developer"
                                android:textSize="12sp"
                                android:textColor="?attr/colorOnSurfaceVariant"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_email"
                                app:tint="?attr/colorPrimary"/>
                            <TextView
                                android:id="@+id/tv_developer_email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="email@example.com"
                                android:layout_marginStart="12dp"
                                android:textColor="?attr/colorOnSurface"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Thank you for using Nebula Player. Your feedback helps us grow."
                            android:textSize="12sp"
                            android:textColor="?attr/colorOutline"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Â© 2025 Nebula Inc."
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:textColor="?attr/colorOutline"
                android:textSize="12sp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>